<div class="modal-content">
	<div class='modal-header'>
		<button type='button' class='close' data-dismiss='modal' aria-hidden='true'>&times;</button>
		<span>Theme Settings</span>
	</div>
	<div class='modal-body'>
		<form class="form-horizontal">
			<div class="row-fluid">
				<div class="form-group">
					<label class="col-sm-2 control-label" for="name">Name:</label>
					<div class="col-sm-10">
						<input name="name" class="form-control" type="text" />
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label" for="size">Points:</label>
					<div class="col-sm-2">
						<input name="size" class="form-control" type="text" />
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-12">
						<button class="btn btn-primary pull-right" data-dismiss='modal' data-action="save">Save</button>
						<button class="btn btn-default pull-right" data-dismiss='modal' data-action="delete">Delete</button>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
